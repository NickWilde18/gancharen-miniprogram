/* pages/search/search.wxss */
page{
  font-size:30rpx;
}
.table {
  display: flex;
  flex-direction: column;
  /* 排列形式: 向下 */
  margin-top: 50px;
  margin-bottom: 50px;
}

.tr {
  display: flex;
  flex-direction: row;
}

.th1,
.th2,
.th3,
.td1,
.td2,
.td3 {
  /* 公有的属性 */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* 自动换行 */
  text-align: center;
  /* 文本居中 */
  justify-content: center;
  /* 主轴居中 */
  align-items: center;
  /* 交叉轴居中 */
  border-top: 1px solid #dadada;
  /* 单元格上线框 */
  border-bottom: 1px solid #dadada;
  /* 单元格下线框 */
  border-left: 1px solid #dadada;
  /* 单元格左线框 */
  border-right: 1px solid #dadada;
  /* 单元格右线框 */
}

.th1,
.th2,
.th3 {
  font-weight: 800;
  /* 字体加重 */
  background-color: #B3CCF4;
  /* 背景色 */
}

.td1,
.th1 {
  width: 30%;
}

.td2,
.th2 {
  width: 45%;
}

.td3,
.th3 {
  width: 20%;
}

.td1,
.td2,
.td3 {
  background-color: #edf3e9;
  /* 背景色 */
}