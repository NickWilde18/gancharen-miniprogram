<!--pages/result/result.wxml-->
<view class="view_fengexian">
  <text class="text_fengexian">HAVE A NICE DAY!</text>
  <view style="width:63%"></view>
</view>
<view class="block_all">
  <!--<text decode="True" style="font-style: italic; display:flex; justify-content: center;">╰(*°▽°*)╯恭喜你完成测试！ヾ(≧▽≦*)o\n
  </text>-->
  <view class="cent">经测试，你的性格是：</view>
  <p class="cent_p">
    <!--<view class="half">{{name}}</view>-->
    {{name}}
  </p>
  <view class="cent" style="text-decoration:underline; font-size:35rpx;">({{final_answer}})</view>
  <text>\n</text>
  <view class="cent">
    <text style="border-color: azure; border-width:3px;border-style: dotted;">↓↓↓个性解读↓↓↓</text>
  </view>

  <view style="  display: flex; align-items: center; vertical-align: center; justify-content: center; flex-direction:row; ">
    <text class="shine" style="text-align:center">{{description}}\n\n</text>
  </view>
  <view class="view_fengexian">
    <view style=" width:45%;background: linear-gradient(to right, #a311c0, #a0f1ea);"></view>
    <text class="text_fengexian" style="color:#f35626;"></text>
    <view style=" width:45%;background: linear-gradient(to right, #ead6ee, #a311c0);"></view>
  </view>

  <text decode="True" style="color:#f35626; text-decoration: underline;">为你推荐:</text>
  <view class="flicker">{{recommend1_p}}</view>
  <text class="flicker" style="font-size:30rpx;">{{recommend1_w}}</text>
  <view>{{recommend1}}</view>
  <text>\n</text>
  <view class="flicker">{{recommend2_p}}</view>
  <text class="flicker" style="font-size:30rpx;">{{recommend2_w}}</text>
  <view>{{recommend2}}</view>
  <text>\n</text>
  <view class="flicker">{{extra_p}}</view>
  <text class="flicker" style="font-size:30rpx;">{{extra_w}}</text>
  <view>{{extra}}</view>
</view>
<view class="view_fengexian">
  <view></view>
  <text class="text_fengexian">——————————</text>
  <view></view>
</view>

<text>\n</text>

<button bindtap="exit" type="primary">退出小程序，返回购买页面>></button>
<text>\n</text>
<button bindtap="back_index" type="warn">返回首页再测一次</button>

<text>\n\n</text>